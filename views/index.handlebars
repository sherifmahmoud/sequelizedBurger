<div id="container">
    <div id="undevoured_div" class="section">
        <div class="head">
            <h3>Undevoured Burgers</h3>
        </div>
        <ol id="undevouredList">
            {{#each burgers }}
            {{#if devoured}}
            {{else}}
            <li>{{burger_name}}<button class="devour" data-id="{{id}}">Devour!</button></li>
            {{/if}}
            {{/each}}
        </ol>
    </div>
    <div id="form" class="section">
        <img src='assets/img/Hamburger-PNG-Image.png'>
        <form action="/" method="POST">
            <input id="name" name="name" type="text">
            <input type="submit" class="btn btn-primary btn-block" value="Add Burger">
        </form>
        <img src='assets/img/Nyan_6e4850_2053917.gif'>
    </div>
    <div id="devoured_div" class="section">
        <div class="head">
            <h3>Devoured Burgers</h3>
        </div>
        <ol id="devouredList">
            {{#each burgers }}
            {{#if devoured}}
            <li>{{burger_name}}</li>
            {{/if}}
            {{/each}}
        </ol>
    </div>
</div>
